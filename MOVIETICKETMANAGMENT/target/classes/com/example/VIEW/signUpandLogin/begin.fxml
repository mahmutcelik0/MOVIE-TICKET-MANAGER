<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" minHeight="425.0" minWidth="500.0" spacing="20.0" style="-fx-background-color: #313131;" stylesheets="@../../CSS/project.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.CONTROLLER.signUpandLoginController.beginController">
   <children>
      <HBox alignment="CENTER" fillHeight="false" prefHeight="100.0" prefWidth="480.0" style="-fx-background-radius: 0 0 40 40; -fx-background-color: #525252;">
         <children>
            <ImageView>
               <image>
                  <Image url="@../../IMAGES/icons8-cinema-film-play-50.png" />
               </image>
            </ImageView>
            <Label alignment="CENTER" prefHeight="51.0" prefWidth="456.0" style="-fx-font-size: 32;" text="MOVIE TICKET MANAGER">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Label>
         </children>
         <VBox.margin>
            <Insets left="10.0" right="10.0" top="20.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER_RIGHT" maxHeight="37.0" prefHeight="55.0" prefWidth="500.0">
         <children>
            <Button fx:id="closeButton" mnemonicParsing="false" onMouseReleased="#buttonClicked">
               <graphic>
                  <ImageView fitHeight="25.0" fitWidth="25.0">
                     <image>
                        <Image url="@../../IMAGES/icons8-x-50.png" />
                     </image>
                  </ImageView>
               </graphic>
               <HBox.margin>
                  <Insets left="393.0" right="5.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" VBox.vgrow="NEVER">
         <children>
            <Button fx:id="login" minWidth="85.0" mnemonicParsing="false" onMouseReleased="#buttonClicked" text="LOGIN">
               <HBox.margin>
                  <Insets right="50.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="signUp" minWidth="85.0" mnemonicParsing="false" onMouseReleased="#buttonClicked" text="SIGN UP">
               <HBox.margin>
                  <Insets left="50.0" />
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets top="30.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
